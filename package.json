{
  "devDependencies": {
    "html-minifier": "^4.0.0",
    "jsdoc": "^4.0.0",
    "typescript": "^4.7.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "name": "simplepass",
  "description": "simplePass is a Javascript password generator.",
  "version": "2.0.0-Beta",
  "browser": "./simplePass/browser/simplePass.js",
  "directories": {
    "test": "test",
    "src": "src",
    "lib": "simplePass"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/staticBanter/simplePass.git"
  },
  "keywords": [
    "password",
    "generator"
  ],
  "author": {
    "name":"Jordan Vezina (staticBanter)",
    "email": "staticbanter@gmail.com",
    "url": "https://staticblogs.ca/users/staticBanter"
  },
  "licenses":[
    {
      "type": "GPL-3.0",
      "url": "https://www.gnu.org/licenses/gpl-3.0.html"
    }
  ],
  "bugs": {
    "url": "https://github.com/staticBanter/simplePass/issues"
  },
  "homepage": "https://github.com/staticBanter/simplePass#readme",
  "private": true,
  "scripts": {
    "webpack-build": "webpack build --config webpack.config.js --env production",
    "webpack-prod-watch": "webpack build --config webpack.config.js --watch --env production",
    "webpack-dev-build": "webpack build --config webpack.config.js --env development",
    "webpack-watch": "webpack build --config webpack.config.js --env development --watch",
    "tsc": "tsc --project .",
    "tsc-watch": "tsc --watch --project .",
    "docs-build": "jsdoc ./simplePass/src/ --tutorials ./docs --configure ./jsdoc.config.json",
    "html-min": "html-minifier --config-file html-minifier.config.json --input-dir ./site/docs --output-dir ./site/docs --file-ext html",
    "prod": "npm run production",
    "production": "npm run tsc && npm run docs-build && npm run webpack-build && npm run html-min"
  }
}
